        <div class="col-12 col-sm-6 col-md-6">
            <div class="row h-100 align-items-center justify-content-center py-2">
                <div class="col-6">
                    <h4 class="mb-3">Bem-vindo(a)</h4>
                    <form id="form_login" is="dmx-serverconnect-form" method="post" action="/api/usuario/verificacao-login" dmx-on:success="run({condition:{outputType:'boolean',if:`form_login.data.resposta.senha==ipt_senha.value`,then:{steps:[{run:{name:'alerta',outputType:'text',action:`dados_usuario.set(\'Nome\',form_login.data.resposta.nome);dados_usuario.set(\'Codigo\',form_login.data.resposta.codigo);dados_usuario.set(\'filial\',ipt_filial.value);navegacao.goto(\'/backoffice/d/\')`}},{run:{outputType:'text',action:`navegacao.goto(\'/backoffice/d/\')`}}]},else:{steps:{run:{name:'alerta_fracasso',outputType:'text',action:`notificacao.warning(\'Senha ou código errado!\')`}}}}})">
